{
    "manifest_version": 3,
    "name": "Edge Favorites New Tab",
    "version": "1.1",
    "description": "Opens the Favorites page when a new tab is opened or by clicking the extension icon.",
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": ["tabs"],
    "chrome_url_overrides": {
      "newtab": "newtab.html"
    },
    "background": {
      "service_worker": "redirect.js"
    },
    "action": {
        "default_title": "Open Favorites",
        "default_icon": {
          "16": "icons/icon16.png",
          "32": "icons/icon32.png"
        }
    }
}